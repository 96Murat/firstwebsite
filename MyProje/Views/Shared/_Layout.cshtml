<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stajodevi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stajodevi</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (ViewBag.IsAdmin == "1")
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/User/List">Üyeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/City/List">Şehirler</a>
                        </li>
                    </ul>
                }
                <div class="">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (ViewBag.IsLoggined == "1")
                            {
                                <li class="navbar-text text-right">
                                    Hoş geldin @ViewBag.UName
                                </li>
                                <li class="nav-item text-right">
                                    <a class="nav-link text-dark" href="/User/Profil">Profil</a>
                                </li>
                                <li class="nav-item text-right">
                                    <a class="nav-link text-dark" href="/User/Exit">Çıkış Yap</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item text-right">
                                    <a class="nav-link text-dark" href="/User/Register">Kayıt Ol</a>
                                </li>
                                <li class="nav-item text-right">
                                    <a class="nav-link text-dark" href="/User/Login">Giriş Yap</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Stajödevi - <a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script defer src="~/js/fontawesome.min.js"></script>
    <script defer src="~/js/fontawesome.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
