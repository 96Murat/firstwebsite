@{
    ViewData["Title"] = "İlçe bilgi düzenleme";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <h2><b>İlçe Bilgileri Güncelleme</b></h2>
        <form method="post">
            <div class="mb-3">
                <label for="DistrictName" class="form-label">İlçe Adı</label>
                <input type="text" class="form-control" id="DistrictName" name="Name" value=@ViewBag.DistrictName maxlength="40" />
                @{if (ViewData["DistrictNameInfo"] != null)
                    {
                        <div>@ViewData["DistrictNameInfo"]</div>
                    }
                    else if (ViewData["Success"] != null)
                    {
                        <div> @ViewData["Success"] </div>
                    }}
            </div>
            <div>
                <a href="/District/List?CityId=@ViewBag.CityId" class="btn btn-primary" type="button">Vazgeç</a>
                <input type="hidden" name="CityId" value=@ViewBag.CityId />
                <input type="submit" class="btn btn-primary" value="Bilgileri Güncelle" />
            </div>
        </form>
    </div>
</div>